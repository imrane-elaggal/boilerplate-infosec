my modules = ["nodejs-20"]

[agent]
expertMode = true

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[nix]
packages = []

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow]]
name = "Server"
author = "agent"

[[workflows.workflow.tasks]]
# Kill old Node processes before starting the app
task = "shell.exec"
args = "pkill node; npm start"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"
